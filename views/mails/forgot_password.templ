package mails

templ ForgotPasswordMail(name string, url string) {
	<p>
		Hi  { name },
		<br/>
		<br/>
		You have requested to reset your password. Click <a href={ templ.URL(url) }>here</a> to reset your password.
		<br/>
		<br/>
		The link will expire in 30 minutes.
		<br/>
		<br/>
		If you did not request to reset your password, please ignore this email.
		<br/>
		<br/>
		Thanks,
		<br/>
		The Ferdinand Team.
	</p>
}
