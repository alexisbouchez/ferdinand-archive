# General configuration.
HTTP_ADDR=":3000"
APP_KEY="<replace_by_app_key>"
APP_NAME="Ferdinand"
APP_URL="http://127.0.0.1:7331"

# Database configuration.
DBMS="sqlite" # (sqlite|postgres|mysql)
DSN="./database.sqlite"

# GitHub OAuth configuration (OPTIONAL).
# GITHUB_OAUTH_KEY=""
# GITHUB_OAUTH_SECRET=""
# GITHUB_OAUTH_CALLBACK_URL="http://127.0.0.1:7331/auth/github/callback"

# Ferdinand's SMTP server configuration.
SMTP_ADDR=":465"
SMTP_DOMAIN="mail.<replace_by_domain>"
SMTP_ADMIN_EMAIL="<replace_by_admin_email>"
SMTP_ENABLE_TLS="true"

# Ferdinand's web app-related SMTP configuration.
SMTP_FROM="Ferdinand <no-reply@<replace_by_domain>"
SMTP_PASSWORD="<replace_by_password>" # can be generated from Ferdinand's webapp for instance
SMTP_PORT="465"

# SSH server configuration
SSH_ADDR=":22"